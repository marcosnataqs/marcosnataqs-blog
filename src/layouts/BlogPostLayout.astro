---
import BaseLayout from './BaseLayout.astro';

interface Props {
  frontmatter: {
    title: string;
    description: string;
    pubDate: string;
    tags?: string[];
    readingTime?: string;
  };
}

const { frontmatter } = Astro.props;
const formattedDate = new Date(frontmatter.pubDate).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<BaseLayout title={frontmatter.title} description={frontmatter.description}>
  <div class="reading-progress" aria-hidden="true">
    <div class="reading-progress__bar"></div>
  </div>
  <article class="blog-post">
    <header class="post-header">
      <h1>{frontmatter.title}</h1>
      <p class="post-meta">
        <time datetime={frontmatter.pubDate}>{formattedDate}</time>
        {frontmatter.readingTime && (
          <span class="reading-time">&nbsp;&middot;&nbsp;{frontmatter.readingTime}</span>
        )}
      </p>
      {frontmatter.tags && (
        <div class="tags">
          {frontmatter.tags.map((tag) => (
            <span class="tag">{tag}</span>
          ))}
        </div>
      )}
    </header>
    <div class="post-content">
      <slot />
    </div>
  </article>
</BaseLayout>

<style>
  .reading-progress {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 2px;
    background: transparent;
    z-index: 40;
    pointer-events: none;
  }

  .reading-progress__bar {
    width: 0%;
    height: 100%;
    background: linear-gradient(90deg, var(--color-accent), #a855f7);
    transition: width 0.08s linear;
  }

  .blog-post {
    max-width: 70ch;
    margin: 0;
  }

  .post-header {
    margin-bottom: 1.5rem;
    padding-bottom: 1.25rem;
    border-bottom: 1px solid var(--color-border);
  }

  .post-header h1 {
    margin-bottom: 0.35rem;
  }

  .post-meta {
    color: var(--color-text-muted);
    font-size: 0.85rem;
  }

  .tags {
    display: flex;
    gap: 0.5rem;
    margin-top: 1rem;
    flex-wrap: wrap;
  }

  .tag {
    background: transparent;
    color: var(--color-text-muted);
    border: 1px solid var(--color-border);
    padding: 0.2rem 0.65rem;
    border-radius: 9999px;
    font-size: 0.8rem;
  }

  .post-content {
    line-height: 1.75;
    color: var(--color-text);
  }

  .post-content :global(pre) {
    padding: 1rem;
    border-radius: 8px;
    overflow-x: auto;
  }

  .post-content :global(code) {
    font-family: 'Fira Code', monospace;
  }

  .post-content :global(h2) {
    margin-top: 2.25rem;
    margin-bottom: 0.85rem;
  }

  .post-content :global(p),
  .post-content :global(li) {
    color: var(--color-text);
  }

  .post-content :global(ul),
  .post-content :global(ol) {
    padding-left: 1.25rem;
  }
</style>

<script>
  const progressBar = document.querySelector('.reading-progress__bar');
  const article = document.querySelector('.blog-post');

  const updateReadingProgress = () => {
    if (!progressBar || !article) return;

    const articleTop = article.offsetTop;
    const articleHeight = article.offsetHeight;
    const viewportHeight = window.innerHeight;
    const maxScroll = Math.max(articleHeight - viewportHeight, 1);
    const scrolled = window.scrollY - articleTop;
    const progress = Math.min(Math.max(scrolled / maxScroll, 0), 1);

    progressBar.style.width = `${Math.round(progress * 100)}%`;
  };

  updateReadingProgress();
  window.addEventListener('scroll', updateReadingProgress, { passive: true });
  window.addEventListener('resize', updateReadingProgress);
</script>
