---
import BaseLayout from '../layouts/BaseLayout.astro';
import PostCard from '../components/PostCard.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog'))
  .sort((a, b) => new Date(b.data.pubDate).getTime() - new Date(a.data.pubDate).getTime())
  .slice(0, 3);
---

<BaseLayout title="Marcos Natã Santos">
  <section class="hero">
    <div class="hero-content">
      <div class="hero-text">
        <p class="prompt"><span class="prompt-caret">&gt;</span> building with AI</p>
        <h1>Marcos Natã Santos</h1>
        <p class="subtitle">
          Software Engineer who loves innovative ideas.
        </p>
        <p class="hero-links">
          <a href="/blog">Read posts</a>
          <span> / </span>
          <a href="https://github.com/marcosnataqs" target="_blank" rel="noopener noreferrer">GitHub</a>
        </p>
      </div>
      <img src="/profile.jpeg" alt="Marcos Natã Santos" class="hero-photo" width="140" height="140" />
    </div>
  </section>

  <section class="recent-posts">
    <h2>Recent Posts</h2>
    <div class="posts-grid">
      {posts.map((post) => (
        <PostCard
          title={post.data.title}
          description={post.data.description}
          pubDate={post.data.pubDate.toISOString()}
          slug={post.id}
          tags={post.data.tags}
        />
      ))}
    </div>
    <a href="/blog" class="view-all">View all posts &rarr;</a>
  </section>
</BaseLayout>

<style>
  .hero {
    padding: 2rem 0 1rem;
  }

  .hero-content {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 2rem;
  }

  .hero-text {
    flex: 1;
    min-width: 0;
  }

  .hero-photo {
    width: 140px;
    height: 140px;
    border-radius: 50%;
    object-fit: cover;
    flex-shrink: 0;
    border: 3px solid var(--color-border);
  }

  @media (max-width: 520px) {
    .hero-content {
      flex-direction: column-reverse;
      align-items: flex-start;
      gap: 1.25rem;
    }

    .hero-photo {
      width: 100px;
      height: 100px;
    }
  }

  .prompt {
    font-family: var(--font-mono);
    font-size: 0.9rem;
    color: var(--color-accent);
    margin-bottom: 0.75rem;
    letter-spacing: 0.02em;
  }

  .prompt-caret {
    opacity: 0.6;
    margin-right: 0.15em;
  }

  .hero h1 {
    margin-bottom: 0.75rem;
  }

  .subtitle {
    font-size: 1.05rem;
    max-width: 60ch;
    margin-bottom: 0.65rem;
  }

  .status {
    font-size: 0.88rem;
    color: var(--color-text-muted);
    display: flex;
    align-items: center;
    gap: 0.4rem;
    margin-bottom: 0.65rem;
  }

  .status strong {
    color: var(--color-text);
    font-weight: 600;
  }

  .status-dot {
    width: 6px;
    height: 6px;
    background: var(--color-accent);
    border-radius: 50%;
    flex-shrink: 0;
  }

  .hero-links {
    font-size: 0.95rem;
    color: var(--color-text-muted);
  }

  .recent-posts {
    padding: 1.25rem 0 0.5rem;
  }

  .recent-posts h2 {
    margin-bottom: 1rem;
  }

  .posts-grid {
    display: block;
  }

  .view-all {
    display: inline-block;
    margin-top: 1rem;
    font-size: 0.92rem;
  }
</style>
